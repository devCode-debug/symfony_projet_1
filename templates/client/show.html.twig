{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto mt-10 p-6 bg-white shadow-xl rounded-2xl">
        <h1 class="text-2xl font-bold text-purple-700 mb-6">Détails du Client</h1>

        <table class="w-full text-sm text-left text-gray-700">
            <tbody>
            <tr class="border-b">
                <th class="py-2 font-semibold text-gray-600 w-1/3">ID</th>
                <td class="py-2">{{ client.id }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-2 font-semibold text-gray-600">Nom</th>
                <td class="py-2">{{ client.nom }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-2 font-semibold text-gray-600">Prénom</th>
                <td class="py-2">{{ client.prenom }}</td>
            </tr>
            <tr class="border-b">
                <th class="py-2 font-semibold text-gray-600">Téléphone</th>
                <td class="py-2">{{ client.telephone }}</td>
            </tr>
            </tbody>
        </table>

        <div class="mt-8 flex gap-4">
            <a href="{{ path('app_client_index') }}" class="inline-block px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-xl shadow transition">
                ⬅️ Retour à la liste
            </a>

            <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="inline-block px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-xl shadow transition">
                ✏️ Modifier
            </a>

            <div class="inline-block">
                {{ include('client/_delete_form.html.twig', { 'button_class': 'px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-xl shadow transition' }) }}
            </div>
        </div>
    </div>
{% endblock %}
