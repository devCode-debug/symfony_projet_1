{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto mt-10 p-6 bg-white shadow-xl rounded-2xl">
        <h1 class="text-3xl font-bold text-purple-700 mb-8">Liste des Clients</h1>

        <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-left text-gray-800">
                <thead class="bg-gray-100 text-gray-600 uppercase text-xs border-b">
                <tr>
                    <th scope="col" class="px-4 py-3">ID</th>
                    <th scope="col" class="px-4 py-3">Nom</th>
                    <th scope="col" class="px-4 py-3">Prénom</th>
                    <th scope="col" class="px-4 py-3">Téléphone</th>
                    <th scope="col" class="px-4 py-3 text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr class="border-b hover:bg-gray-50">
                        <td class="px-4 py-3">{{ client.id }}</td>
                        <td class="px-4 py-3">{{ client.nom }}</td>
                        <td class="px-4 py-3">{{ client.prenom }}</td>
                        <td class="px-4 py-3">{{ client.telephone }}</td>
                        <td class="px-4 py-3 text-center space-x-2">
                            <a href="{{ path('app_client_show', {'id': client.id}) }}"
                               class="inline-block px-3 py-1 bg-blue-600 text-white text-xs rounded-lg hover:bg-blue-700 transition">
                                Voir
                            </a>
                            <a href="{{ path('app_client_edit', {'id': client.id}) }}"
                               class="inline-block px-3 py-1 bg-yellow-500 text-white text-xs rounded-lg hover:bg-yellow-600 transition">
                                Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center py-4 text-gray-500">Aucun client trouvé.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6">
            <a href="{{ path('app_client_new') }}"
               class="inline-block px-5 py-2 bg-purple-700 hover:bg-purple-800 text-white rounded-xl shadow transition">
                ➕ Nouveau client
            </a>
        </div>
    </div>
{% endblock %}
